{
  "name": "aiswelcome",
  "version": "1.3.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:tdd": "node scripts/test-complete-tdd.js",
    "test:integration": "node scripts/test-all-functionality.js",
    "test:all": "npm run test:integration && npm run test:tdd",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test:e2e": "turbo run test:e2e",
    "deploy": "node scripts/deploy-complete.js",
    "deploy:major": "npm run version:bump:major && npm run deploy",
    "deploy:minor": "npm run version:bump:minor && npm run deploy",
    "deploy:patch": "npm run version:bump:patch && npm run deploy",
    "version:bump:major": "npm version major --no-git-tag-version",
    "version:bump:minor": "npm version minor --no-git-tag-version",
    "version:bump:patch": "npm version patch --no-git-tag-version"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.15.9"
}
